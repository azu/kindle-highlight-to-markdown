{
  "name": "kindle-highlight-to-markdown",
  "version": "1.0.4",
  "description": "Convert Your Kindle highlight & Note to Markdown/JSON",
  "homepage": "https://github.com/azu/kindle-highlight-to-markdown",
  "bugs": {
    "url": "https://github.com/azu/kindle-highlight-to-markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/kindle-highlight-to-markdown.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "module/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module/",
    "src/"
  ],
  "scripts": {
    "main": "ts-node src/node.ts",
    "build": "tsc -p . && tsc -p ./tsconfig.module.json",
    "clean": "rimraf lib/ module/",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "# mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "lint-staged": "^12.1.7",
    "mocha": "^9.1.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "jsdom": "^19.0.0",
    "markdown-function": "^1.1.1"
  }
}
